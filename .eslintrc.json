{
  "extends": "airbnb-base",
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint/eslint-plugin"],
  "rules": {
    "max-len": [2, 160],
    "indent": ["warn", 2],
    "@typescript-eslint/no-unused-vars": 2,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 0,
    "func-names": 0,
    "class-methods-use-this": 0,
    "prefer-promise-reject-errors": 0,
    "no-use-before-define": 0,
    "no-param-reassign": 0,
    "no-useless-constructor": 0,
    "no-console": 0,
    "no-shadow": 0,
    "no-unused-vars": 0
  },
  "parserOptions":  {
    "ecmaVersion": 6,
    "sourceType":  "module",
    "ecmaFeatures":  {
      "tsx":  true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true

  },
  "globals": {
    "describe": "readonly",
    "it": "readonly",
    "beforeEach": "readonly"
  }
}


