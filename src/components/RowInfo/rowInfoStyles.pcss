.rowInfo {
    font-size: inherit;
    font-family: inherit;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

@media screen and (max-width: 768px) {
    .rowInfo {
        flex-direction: column;

        &__title {
            font-size: 10px;
            margin-bottom: 8px;
        }
    }
}
