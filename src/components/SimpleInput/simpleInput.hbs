<div class="simpleInput__wrapper">
    <input required="{{required}}" name="{{name}}" type="{{type}}" value="{{value}}" class="simpleInput__item" placeholder=" "/>
    <label class="simpleInput__label" >{{label}}</label>
    {{#if error}}
        <div class="simpleInput__error">{{error}}</div>
    {{/if}}
</div>

